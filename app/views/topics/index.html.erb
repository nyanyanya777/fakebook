<div class="container">
<p id="notice"><%= notice %></p>
<div class="row">
  <div class="col-sm-4">
   </div>
  <div class="col-sm-4">
<p class="text-center"><%= render 'form'%></p>
  <tbody>
    <% @topics.each do |topic| %>
      <tr>
        <p><%= profile_img(topic.user) %></p>
        <p><%= topic.user.name %></p>
        <p><%= topic.content %></p>
        <p><%= image_tag(topic.photo) %></p>
        <td><%= link_to 'コメント', topic_path(topic[:id])%></td>
        <td><%= link_to '編集', edit_topic_path(id: topic.id) %></td>
        <td><%= link_to '削除', topic, method: :delete, data: { confirm: '本当に削除してよろしいですか？' } %></td>
      </tr>
    <% end %>
  </tbody>
  </div>
  <div class="col-sm-4">
   </div>
</div>
</div>
